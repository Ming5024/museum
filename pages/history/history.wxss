/* pages/history/history.wxss */

.list-view{ 
  display: flex;  
  flex-direction: row;  
  margin:25rpx 40rpx;
  padding: 5rpx 0 5rpx 15rpx;
  height:170rpx;
  border: 1px solid #D1D1D1;
  border-radius: 12rpx;
  box-shadow:6rpx 6rpx 3rpx 3rpx #D9D9D9;
}  

.left-list-view{
  margin-left: 20rpx;  
  display: flex;  
  flex-direction: row;  
}  

.left-image{
  display: flex;
  width: 150rpx;
  height:150rpx;
  margin: auto 0;
}

.right-list-view{
  width: 590rpx;
  height: 150rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.right-name {
  display: flex;
  flex: 1.5;
  flex-direction: column;
}

.right-visited {
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 0.8rem;
}