/* pages/history/history.wxss */

.list-view{ 
  display: flex;  
  flex-direction: row;  
  margin:25rpx 40rpx;
  padding: 5rpx 0 5rpx 15rpx;
  height:170rpx;
  border: 1px solid #D1D1D1;
  border-radius: 12rpx;
  box-shadow:6rpx 6rpx 3rpx 3rpx #D9D9D9;
}  

.left-list-view{
  margin-left: 20rpx;  
  display: flex;  
  flex-direction: row;  
}  

.left-image{
  display: flex;
  width: 150rpx;
  height:150rpx;
  margin: auto 0;
}

.right-list-view{
  width: 590rpx;
  height: 150rpx;
  margin-top: 8rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.right-name {
  display: flex;
  flex: 1.5;
  flex-direction: column;
}

.right-visited {
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 0.8rem;
}

.comment-btn {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 65rpx;
  padding: 10rpx 0 10rpx 0;
  background-color: #D9D9D9;  /* #096d48 */
  z-index: 2000;
  position: fixed;
  top: 0;
}

.btn{
  height: 60rpx;
  font-size: 24rpx;
  padding: 0 30rpx;
  border: 1px solid #dcdcdc;
  border-radius: 30rpx;
  background: #fff;
  text-align: center;
}

.btn-selected{
  /* border: 1px solid #06a380; */
  background-color: #ADADAD;
}