#image-container {
  display:flex;
  justify-content: center;
  align-items: flex-start;
}

swiper {
  width: 100%;
}

#image {
  width: 100%;
  height: 100%;
}

.tab {
  width: 95%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  margin: auto;
  font-size:30rpx;
  font-weight: bolder;
}

.tab-item {
  width: 100%;
  color: #434343;
}

.active {
  border-bottom: 6rpx solid #Fe970f;
}

#detail {
  margin-top: 15rpx;
}

#detail image{
  width: 45rpx;
  height: 45rpx;
}

#flex-container {
  margin-left: 25rpx;
  margin-right: 40rpx;
}

#flex-view1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

#flex-view2 {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  flex-direction: column;
  font-size: 0.8rem; 
}

#flex-view3 {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  flex-direction: column;
  font-size: 0.7rem; 
}

#flex-view1-item {
  display:flex;
  flex: 0.95;
  align-items: flex-end;
}


#gender {
  width: 20px;
  height: 20px;
}

text#name {
  font-size: 1.5rem;
  margin-right: 10rpx;
}

#article-container {
  display: flex;
  flex-direction: column;
}

#item-title-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

#item-title-container #item-title {
  font-size: 1.3rem;
}

#text-container {
  margin-left: 25rpx;
}

#myVideo {
  margin: 25rpx auto;
  align-items: center;
  display:flex;
}


