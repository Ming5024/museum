/* pages/game/index/index.wxss */
page {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height:100%;
  background-image: url('https://www.sysubm.com/game/pic/bg.jpg');
  background-repeat: repeat-y;
}

.logo {
  width: 100%;
  margin-top: 200rpx;
  margin-bottom: 50rpx;
}

.game_btn {
  width: 50%;
  margin: 0 auto 50rpx;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.6;
}

.modalDlg{
  background-image: url('https://www.sysubm.com/game/pic/modal_history.png');
  width: 580rpx;
  height:600rpx;
  position: fixed;
  top: 20%;
  left: 0;
  z-index: 9999;
  margin: 0 85rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-size:100% 100%;
  background-repeat:no-repeat;
}

.modalDlg text {
  line-height: 100rpx;
}

.modalDlg button {
  width: 30%;
}

.modalDlg .modal_table {
  margin: 0 50rpx;
}

.modalDlg image {
  width:50rpx;
  height:50rpx;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.5rem;
  align-items: center;
}
.td {
    width:40%;
    height: 2rem;
    justify-content: center;
    text-align: center;
    font-size:15px;
}
.bg-w{
  border-top: 2px solid darkgrey;
  border-bottom: 2px solid darkgrey;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  display: flex;
  height: 2rem;
  align-items: center;
}

.th-1, .td-1 {
  width: 70%;
}