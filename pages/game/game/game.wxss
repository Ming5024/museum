/* pages/game/game.wxss */
page {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  background-image: url('https://www.sysubm.com/game/pic/bg.jpg');
  background-repeat: repeat-y;
  padding-bottom: 50rpx;
}

.logo {
  width: 100%;
}

.game_card {
  width: 90%;
  height:500rpx;
  margin: 10rpx 5%;
  display:inline-block;

}

.card_pic {
  width: 100%;
  height:90%;
}

.card_input {
  width:70%;
  margin:0 auto;
  background-color:white;
  border:2px solid grey;
}

.submit_btn {
  margin-top: 50rpx;
  width: 60%;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.6;
}

.modalDlg{
  background-image: url('https://www.sysubm.com/game/pic/modal_history.png');
  width: 580rpx;
  height:600rpx;
  position: fixed;
  top: 20%;
  left: 0;
  z-index: 9999;
  margin: 0 85rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-size:100% 100%;
  background-repeat:no-repeat;
}

.modalDlg text {
  line-height: 100rpx;
}

.modalDlg button {
  width: 30%;
}

.single_result {
  width: 40%;
  display:inline-block;
  padding:0 5%;
  font-size: 15px;
}

.modalDlg .result_image {
  width: 25rpx;
  height: 25rpx;
}