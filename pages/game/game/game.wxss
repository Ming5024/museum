/* pages/game/game.wxss */
page {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  background-image: url('https://www.sysubiomuseum.com/game/pic/bg.jpg');
  background-repeat: repeat-y;
  padding-bottom: 50rpx;
}

.logo {
  width: 100%;
}

.game_card {
  width: 48%;
  height:350rpx;
  margin: 10rpx 1%;
  display:inline-block;

}

.card_pic {
  width: 100%;
  height:90%;
}

.card_input {
  width:90%;
  margin:0 auto;
  background-color:white;
  border:2px solid grey;
}

.submit_btn {
  margin-top: 50rpx;
  width: 60%;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.6;
}

.modalDlg{
  background-image: url('https://www.sysubiomuseum.com/game/pic/bg.jpg');
  width: 580rpx;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  margin: 0 85rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modalDlg text {
  line-height: 100rpx;
}

.modalDlg button {
  width: 30%;
}