/**index.wxss**/

page{
  width: 100vw;
  height: 200vh;
}
image{
  width: 100vw;
  height: 30vh;
}

.cover{
  width: 100vw;
  height: 100vh;
}
.coverbackground{
  width: 100%;
  height: 100%;
  z-index: 1;
}
.covertitle{
  width: 100vw;
  height: 9vh;
  z-index: 2;
}
.covercontent{
  width: 100vw;
  height: 10vh;
  text-align: center;
  color: white;
  font-size: 0.8rem;
  opacity: 0.8;
  z-index: 2;
}
.coverbutton{
  width: 50rpx;
  height: 50rpx;
  z-index: 2;
}

.scroll{
  width: 100vw;
  height: 30vh;
}
.scrollitem{
  width: 100vw;
  height: 30vh;
}

.introduction{
  padding: 2vw 5vw;
  font-size: 30rpx;
  font-family: 微软雅黑;
}
.text{
  line-height: 1.3rem;
}

#audio-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 65rpx;
  padding: 10rpx 0 10rpx 0;
  opacity: 0.8;
  background-color: #D9D9D9;  /* #096d48 */
  z-index: 2000;
  position: fixed;
  top: 0;
}

#audio-view image {
  float: right;
  width: 45rpx;
  height: 45rpx;
}

#article-container {
  display: flex;
  flex-direction: column;
}

#item-title-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left:20rpx;
}

#item-title-container image {
  width:45rpx;
  height:45rpx;
}

#item-title-container #item-title {
  font-size: 1.3rem;
}
